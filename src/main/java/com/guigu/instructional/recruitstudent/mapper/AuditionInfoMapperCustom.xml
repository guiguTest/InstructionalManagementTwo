<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.guigu.instructional.recruitstudent.mapper.AuditionInfoMapperCustom">

	<sql id="query_audition_student">
		<if test="auditionInfoCustom!=null">
			<if test="auditionInfoCustom.studentName!=null and auditionInfoCustom.studentName!=''">
				s.student_name like '%${auditionInfoCustom.studentName}%'
			</if>
		</if>
	</sql>
	<sql id="query_audition_discipline">
		<if test="auditionInfoCustom!=null">
			<if test="auditionInfoCustom.disciplineName!=null and auditionInfoCustom.disciplineName!=''">
				d.discipline_name like '%${auditionInfoCustom.disciplineName}%'
			</if>
		</if>
	</sql>
	<sql id="query_audition_student_discipline">
		<if test="auditionInfoCustom!=null">
			<if test="auditionInfoCustom.disciplineName!=null and auditionInfoCustom.disciplineName!='' and auditionInfoCustom.studentName!=null and auditionInfoCustom.studentName!=''">
				d.discipline_name like '%${auditionInfoCustom.disciplineName}%' and s.student_name like '%${auditionInfoCustom.studentName}%'
			</if>
		</if>
	</sql>
	<select id="findAuditionInfoCustomList" parameterType="com.guigu.instructional.po.AuditionInfoCustom" resultType="com.guigu.instructional.po.AuditionInfoVO">
		select a.audition_id,a.student_id,a.audition_time,a.audition_addr,a.audition_course,a.audition_desc,s.student_name,d.discipline_name
		from audition_info a,student_info s,discipline_info d 
		where a.student_id=s.student_id and a.audition_course=d.discipline_id;
 		<where>
			<include refid="query_audition_student"></include>
			<include refid="query_audition_discipline"></include>
			<include refid="query_audition_student_discipline"></include>
		</where>
	</select>

</mapper>